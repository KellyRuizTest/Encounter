<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.google.android.material.card.MaterialCardView
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
            android:id="@+id/contact_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="9dp"
            android:focusable="true"
            android:clickable="true"
            app:cardElevation="0dp"
            android:padding="1dp"
            app:cardBackgroundColor="@android:color/transparent"
            android:foreground="?attr/selectableItemBackground"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/avatar_image"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="6dp"
                        android:foregroundGravity="center"
                        android:src="@drawable/usermale"
                        app:civ_border_color="@color/colorPrimaryDark"
                        app:civ_border_width="1dp" />

                    <TextView
                        android:id="@+id/name_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="8dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        tools:text="John Doe" />

                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_post_from"
                        android:layout_width="match_parent"
                        android:layout_height="256dp"
                        android:scaleType="centerCrop" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp"
                            android:padding="2dp">

                            <ImageView
                                android:id="@+id/comment_post"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="4dp"
                                android:src="@drawable/chat" />

                            <ImageView
                                android:id="@+id/like_post"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginLeft="50dp"
                                android:layout_alignLeft="@+id/comment_post"
                                android:src="@drawable/ic_favorite_border_black_24dp"
                                android:tag="NO" />

                            <ImageView
                                android:id="@+id/join_post"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginRight="25dp"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/join"
                                android:tag="NO" />

                            <TextView
                                android:id="@+id/join_like"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:layout_alignRight="@+id/join_post"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="4dp" />

                        </RelativeLayout>

                    <TextView
                        android:id="@+id/count_like"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginStart="5dp"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/post_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Title"
                        android:layout_marginStart="9dp"
                        tools:layout_editor_absoluteX="28dp"
                        tools:layout_editor_absoluteY="101dp"
                        android:maxLength="180"
                        android:maxLines="1"
                        android:textAppearance="?attr/textAppearanceHeadline5"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:paddingBottom="4dp"
                        />

                        <TextView
                            android:id="@+id/post_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Description..."
                            android:layout_marginStart="9dp"
                            tools:layout_editor_absoluteX="28dp"
                            tools:layout_editor_absoluteY="101dp"
                            android:maxLines="1"
                            android:textSize="12sp"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginBottom="4dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/count_comment"
                            android:layout_marginStart="6dp"
                            android:layout_marginBottom="3dp" />

                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="2dp" >


                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/border_layout"
            android:layout_marginTop="6dp"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>