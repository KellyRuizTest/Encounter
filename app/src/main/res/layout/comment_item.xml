<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageprofile_item_comment"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="6dp"
        android:layout_centerVertical="true"
        android:src="@drawable/usermale"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="0.2dp" />

    <TextView
        android:id="@+id/username_item_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/imageprofile_item_comment"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textStyle="bold"
        android:textSize="14sp"
        android:text="username"
        />

    <TextView
        android:id="@+id/description_item_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="4dp"
        android:layout_below="@+id/username_item_comment"
        android:layout_toEndOf="@id/imageprofile_item_comment"
        android:layout_marginTop="3dp"
        android:textSize="12sp"
        android:text="commentario"
        />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
</RelativeLayout>